{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": false,
    "typeRoots": [
      "node_modules/@type",
      "src/@types"
    ],
    "lib": [
      "dom",
      "es5"
    ]
  },
  "include": [
    "src",
    "src/@types"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}