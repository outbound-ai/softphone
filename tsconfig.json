{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowJs": false,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
